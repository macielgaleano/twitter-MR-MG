<div class="container">
  <div class="row d-flex justify-content-center">
    <h2 class="text-center pt-5 mb-5 last-tweets-text">
      Ultimos tweets subidos:
    </h2>
    <div class="col-9 mb-3">
      <div class="row">
        <div class="col-2">
          <img class="image img-fluid" src="<%- req.user.avatar%>" alt="" />
        </div>
        <div class="col-10 mb-3">
          <div class="row">
            <div class="col-6">
              <a
                class="tweet-display-username text-danger"
                href="/usuario/<%- req.user.username %> "
                >@<%- req.user.username %>
              </a>
              <small class="tweet-display-name"
                ><%- req.user.name + ' ' +req.user.lastname %></small
              >
            </div>
            <div class="col-6 tweet-date mb-2">
              <div></div>
            </div>
            <div class="col-12">
              <form class="" action="/tweet/crear" method="POST">
                <label for=""></label>
                <textarea
                  class="text-area"
                  name="content"
                  id="content"
                  rows="3"
                ></textarea>

                <button
                  name=""
                  id=""
                  type="submit"
                  class="btn mt-2 btn-send btn-danger"
                  href="#"
                  role="button"
                >
                  Publicar
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
